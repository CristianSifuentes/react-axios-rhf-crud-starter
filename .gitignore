# ===============================
# React + Node.js Expert .gitignore
# ===============================

# --- Dependencies ---
/node_modules/
client/node_modules/
server/node_modules/
/jspm_packages/

# --- Build outputs ---
/dist/
/build/
/out/
/.next/
/.nuxt/
/.svelte-kit/
/.storybook-static/
/.astro/

# --- React / Vite / CRA / Next.js cache ---
/.cache/
/.next/cache/
/.vite/
/vite.config.ts.timestamp-*
/vite.config.js.timestamp-*

# --- TypeScript cache ---
*.tsbuildinfo

# --- Logs ---
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# --- Env & Secrets ---
.env
.env*.local
.env.development.local
.env.test.local
.env.production.local

# --- Coverage & Testing ---
/coverage/
/test-results/
/cypress/screenshots/
/cypress/videos/
/playwright-report/
/test-output/
/jest-html-reporters-*

# --- Temporary files ---
/tmp/
/temp/
/*.tmp
*.swp
*.swo

# --- OS generated ---
.DS_Store
Thumbs.db

# --- IDE & Editors ---
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
.idea/
*.iml

# --- Package manager locks (if using 1, ignore others) ---
# Uncomment the one(s) you want ignored
# /package-lock.json
# /yarn.lock
# /pnpm-lock.yaml

# --- Storybook / Docs ---
/storybook-static/
/styleguide/

# --- Serverless / Cloud builds ---
/.serverless/
/.vercel/
/.netlify/
/functions-build/
/amplify/

# --- Misc tools ---
/.eslintcache
/.parcel-cache
/.sass-cache
/.cache-loader
/.eslintcache
/.stylelintcache

# --- Monorepo workspaces (Lerna, Turborepo, Nx) ---
/.pnpm-store/
/.turbo/
/nx-out/
/lerna-debug.log

# --- Prisma / DB related ---
/prisma/dev.db
/prisma/test.db
*.sqlite
*.sqlite-journal

# --- Optional: macOS, Linux, Windows system junk ---
*.lock-wscript
*.orig
*.rej
*.bak
*.pid
*.seed
*.pid.lock
